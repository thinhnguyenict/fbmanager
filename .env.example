# FB Manager Configuration Template
# Copy this file to .env and fill in your actual values

# Facebook Credentials
FB_EMAIL=your_email@example.com
FB_PASSWORD=your_password_here

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
LOG_FILE=/var/log/fbmanager/app.log

# Proxy Settings (Optional)
# Leave empty if not using proxy
PROXY_HOST=
PROXY_PORT=
PROXY_USER=
PROXY_PASS=

# Browser Settings (Optional)
HEADLESS_BROWSER=True
BROWSER_TIMEOUT=30

# Additional Settings
# Add your custom settings below

# Web Interface Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000
SECRET_KEY=your-random-secret-key-change-in-production

# Admin credentials for web interface
ADMIN_USER=admin
ADMIN_PASSWORD=change-this-password
