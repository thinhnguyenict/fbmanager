# FB Manager Configuration Template
# Copy this file to .env and fill in your actual values

# Facebook Credentials
FB_EMAIL=your_email@example.com
FB_PASSWORD=your_password_here

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
LOG_FILE=/var/log/fbmanager/app.log

# Proxy Settings (Optional)
# Leave empty if not using proxy
PROXY_HOST=
PROXY_PORT=
PROXY_USER=
PROXY_PASS=

# Browser Settings (Optional)
HEADLESS_BROWSER=True
BROWSER_TIMEOUT=30

# Additional Settings
# Add your custom settings below

# Web Interface Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000
# IMPORTANT: Generate a strong random secret key for production
# Example: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-MINIMUM-16-CHARS

# Admin credentials for web interface
# IMPORTANT: Change these default values immediately after installation
ADMIN_USER=admin
ADMIN_PASSWORD=CHANGE-THIS-STRONG-PASSWORD
